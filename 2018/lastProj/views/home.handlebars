
<h2>Enter your workout</h2>

<form id="exerciseForm">
	Exercise:	
	<input type="text" name="exercise" id="exercise"><br>
	Reps:	
	<input type="number" name="reps" id="reps "min="0" max="10000"><br>
	Weight:	
	<input type="number" name="weight" id="weight "min="0" max="10000"><br>
	LBS (checked) KG (unchecked):	
	<input type="checkbox" name="lbsOrKg" id="lbsOrKg"><br>
	Date:	
	<input type="date" name="date" id="date"><br>
	<input type="submit" name="" value="Submit" id="submitItem">
</form>
<br>

<table id="workoutTable">
	<tr>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>KG/LBS</th>
		<th>Date</th>
		<th>Update</th>
		<th>Delete</th>
	</tr>
	{{#if results}}
		{{#each results}}
			<tr>
				<td>{{this.name}}</td>
				<td>{{this.reps}}</td>
				<td>{{this.weight}}</td>
				<td>{{this.lbs}}</td>
				<td>{{this.date}}</td>
				<td>
					<a href="/update?id={{this.id}}"><input type="button" value="Update"></a>
			    </td>
				<td>
					<input type="button" name="delete" value="Delete" onClick="deleteRow('workoutTable',{{this.id}})">
					<input type="hidden" id="delete{{this.id}}">
			    </td>
			</tr>
		{{/each}}
	{{/if}}
</table>
