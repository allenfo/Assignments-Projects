<h2>Teams that are attending races table</h2>

<table id="tableAttendingRaceTeams" border="1">
        <tr>
                <th>Team</th>
                <th>Race</th>
       		<th>Update</th>
		<th>Delete</th>
        </tr>
                {{#each attendingRaceTeams}}
                        <tr>
                                <td>{{this.team_name}}</td>
				<td>{{this.race_name}}</td>
     				<td><a href="/attendingRaceTeams/{{this.id}}">Update</a></td>
				<td><button onclick="deleteAttendingRaceTeam({{this.id}})"> delete</button></td>
                        </tr>
                {{/each}}
</table>
<br>
<h2>Add a team going to a race (many to many)</h2>
<form id="attendingRaceTeams" action="/attendingRaceTeams" method="post">
        Team Name:
        <select name="team_number">
	{{#each team}}
                <option value="{{this.id}}">{{this.team_name}}</option>
	{{/each}}
	</select><br>
	Race Name:
        <select name="race_number">
	{{#each race}}
                <option value="{{this.id}}">{{this.race_name}}</option>
	{{/each}}
	</select><br>
        <input type="submit" value="submit">
</form>
